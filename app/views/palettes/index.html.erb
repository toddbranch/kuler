<p id="notice"><%= notice %></p>

<h1>Palettes in Yo Face!</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @palettes.each do |palette| %>
      <tr>
        <td><%= palette.name %></td>
        <td><%= palette.slug %></td>
        <td><%= link_to 'Show', palette %></td>
        <td><%= link_to 'Edit', edit_palette_path(palette) %></td>
        <td><%= link_to 'Destroy', palette, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Palette', new_palette_path %>
